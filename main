-- Game: Bubble Gum Simulator Infinity
-- Version: 1.0

-- Roblox Services
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local replicatedStorage = game:GetService("ReplicatedStorage")

-- Remotes (Adjust based on your game!)
local Remotes = replicatedStorage:WaitForChild("Remotes")
local BlowBubbleEvent = Remotes:FindFirstChild("BlowBubble")
local CollectCoinEvent = Remotes:FindFirstChild("CollectCoin")
local HatchEggEvent = Remotes:FindFirstChild("HatchEgg")

-- Mission Detection (Adjust if necessary)
local missionGui = playerGui:WaitForChild("CompetitiveUI", 10)
local missionLabel = missionGui and missionGui:FindFirstChild("MissionLabel")

-- GUI Creation
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HelloKittyAutoFarm"
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 400)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(255, 182, 193)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 20)
corner.Parent = mainFrame

local kittyImage = Instance.new("ImageLabel")
kittyImage.Size = UDim2.new(0, 100, 0, 100)
kittyImage.Position = UDim2.new(0.5, -50, 0, 10)
kittyImage.BackgroundTransparency = 1
kittyImage.Image = "rbxassetid://5864590482"
kittyImage.Parent = mainFrame

local startButton = Instance.new("TextButton")
startButton.Size = UDim2.new(0, 200, 0, 50)
startButton.Position = UDim2.new(0.5, -100, 0, 140)
startButton.BackgroundColor3 = Color3.fromRGB(255, 228, 225)
startButton.Text = "Start Auto Mission üéÄ"
startButton.Font = Enum.Font.FredokaOne
startButton.TextSize = 20
startButton.TextColor3 = Color3.new(1, 0, 1)
startButton.Parent = mainFrame

local corner2 = Instance.new("UICorner")
corner2.CornerRadius = UDim.new(0, 15)
corner2.Parent = startButton

local stopButton = Instance.new("TextButton")
stopButton.Size = UDim2.new(0, 200, 0, 50)
stopButton.Position = UDim2.new(0.5, -100, 0, 210)
stopButton.BackgroundColor3 = Color3.fromRGB(255, 192, 203)
stopButton.Text = "Stop Auto Mission ‚ùå"
stopButton.Font = Enum.Font.FredokaOne
stopButton.TextSize = 20
stopButton.TextColor3 = Color3.new(1, 0, 1)
stopButton.Parent = mainFrame

local corner3 = Instance.new("UICorner")
corner3.CornerRadius = UDim.new(0, 15)
corner3.Parent = stopButton

local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(0, 250, 0, 30)
statusLabel.Position = UDim2.new(0.5, -125, 0, 280)
statusLabel.BackgroundTransparency = 1
statusLabel.Text = "Status: Idle üò¥"
statusLabel.Font = Enum.Font.FredokaOne
statusLabel.TextSize = 18
statusLabel.TextColor3 = Color3.fromRGB(255, 105, 180)
statusLabel.Parent = mainFrame

-- Variables
local farming = false

-- Auto Mission Logic
local function autoCompleteMission()
    farming = true
    statusLabel.Text = "Status: Auto Farming üéÄ"
    
    while farming do
        local missionText = "unknown"
        
        if missionLabel then
            missionText = missionLabel.Text:lower()
        end
        
        if string.find(missionText, "bubble") and BlowBubbleEvent then
            BlowBubbleEvent:FireServer()
            print("üéà Blowing bubble...")
            
        elseif string.find(missionText, "coin") and CollectCoinEvent then
            CollectCoinEvent:FireServer("FakeCoinID") -- Replace if needed
            print("ü™ô Collecting coin...")
            
        elseif string.find(missionText, "hatch") and HatchEggEvent then
            HatchEggEvent:FireServer("BasicEgg")
            print("ü•ö Hatching egg...")
            
        else
            print("üí§ No valid mission found or unknown task...")
        end
        
        task.wait(3)
    end
    
    statusLabel.Text = "Status: Idle üò¥"
end

-- Stop Auto
local function stopFarming()
    farming = false
    statusLabel.Text = "Status: Idle üò¥"
end

-- Button Connections
startButton.MouseButton1Click:Connect(autoCompleteMission)
stopButton.MouseButton1Click:Connect(stopFarming)

-- Anti-AFK
local VirtualUser = game:GetService('VirtualUser')
player.Idled:Connect(function()
    VirtualUser:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
    task.wait(1)
    VirtualUser:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
end)
